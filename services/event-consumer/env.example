# Event Consumer Environment Variables

# Node Environment
NODE_ENV=development

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=event-consumer
KAFKA_GROUP_ID_PREFIX=event-consumer

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration (for outbox events)
DATABASE_URL=postgresql://username:password@localhost:5432/survey_db

# Consumer Configuration
CONSUMER_BATCH_SIZE=100
CONSUMER_POLL_INTERVAL_MS=1000
CONSUMER_SESSION_TIMEOUT_MS=30000
CONSUMER_HEARTBEAT_INTERVAL_MS=3000

# Logging
LOG_LEVEL=info
